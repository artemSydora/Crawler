@model PageViewModel;
@{
    var count = 0;
}
<div class="text-center">
    @if (Model.Tests.Count() > 0)
    {
        <h1 class="display-4">Tests</h1>

        <table class="table table-bordered box-shadow table-hover table-sm">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Website</th>
                    <th scope="col">Date</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            @{
                foreach (var test in Model.Tests)
                {
                    <tbody>
                        <tr>
                            <th scope="row">@(++count)</th>
                            <td class="text-left w-50">@test.StartPageUrl</td>
                            <td>@test.DateTime</td>
                            <td>
                                <a asp-controller="Detail"
                                   asp-action="Details"
                                   asp-route-id="@test.Id">
                                    See details
                                </a>
                            </td>
                        </tr>
                    </tbody>
                }
            }
        </table>

        <div class="container">
            @if (Model.CurrentPage > 1)
            {
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.CurrentPage - 1)"
                   class="btn btn-outline-dark">
                    Previous
                </a>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.CurrentPage + 1)"
                   class="btn btn-outline-dark">
                    Next
                </a>
            }
        </div>
    }
    else
    {
        <p class="display-4">There are no tests yet</p>
    }
</div>